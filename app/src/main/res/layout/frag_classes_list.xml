<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="masegi.sho.mytimetable.view.fragment.ClassListFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/classList_recycler_view"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="@dimen/space_16dp"
        android:paddingBottom="@dimen/space_16dp"
        android:fadeScrollbars="true"/>

    <RelativeLayout
        android:id="@+id/classList_empty_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/classList_empty_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_inbox_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_class"
            android:textStyle="bold"
            android:textSize="19sp"
            android:layout_below="@+id/classList_empty_image"
            android:layout_marginTop="@dimen/space_16dp"/>

    </RelativeLayout>

</RelativeLayout>
